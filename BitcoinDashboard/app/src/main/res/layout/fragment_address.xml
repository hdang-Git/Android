<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hai.bitcoindashboard.AddressFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pageview_black_24dp"
            android:layout_marginTop="38dp"
            android:id="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_addr"
            android:layout_alignTop="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"
            android:layout_marginEnd="34dp"
            android:hint="Enter in Address" />


        <!--
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addrBalance"
            android:background="@drawable/shape"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/imageButton"
            android:layout_alignStart="@+id/input_addr" />

        -->

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="76dp"
            android:layout_below="@+id/linearBorder"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:id="@+id/linearBorder"
            android:layout_below="@+id/input_addr"
            android:layout_alignParentStart="true">
            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/addrBalance"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                android:layout_marginTop="28dp" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
